<script>

function escapeRegExp(str) {
    return str.replace(/([.*+?^=!:${}()|\[\]\/\\])/g, "\\$1");
}

function parseMessage(msg, type){
	m = msg.replace(type + ":state('", "").replace("')", "");
	return "<br/><pre>"+ m.replace(/@/g, "<br/>")+"</pre>";
}

       var socket  = io.connect();
       socket.on('connect', function(){ 
